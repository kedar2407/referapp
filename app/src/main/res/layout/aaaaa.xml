<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="130dp"
            android:adjustViewBounds="true"
            android:layout_height="130dp"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_baseline_account_circle_24" />


        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_below="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="Login"
                android:textColor="#35405E"
                android:textSize="30dp"/>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_below="@+id/tvlogin"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textAllCaps="true"
                        android:textSize="15sp"
                        android:textColor="#151C49"
                        android:fontFamily="sans-serif-light"/>
                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:background="@drawable/outlineimage"
                            android:src="@drawable/ic_baseline_account_circle_24"/>
                        <EditText
                            android:background="@drawable/outlineeditext"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:layout_height="40dp"
                            android:textColor="#121111"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textAllCaps="true"
                        android:textSize="15sp"
                        android:textColor="#1F2E4A"
                        android:fontFamily="sans-serif-light"/>
                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:background="@drawable/outlineimage"
                            android:src="@drawable/ic_baseline_vpn_key_24"/>

                        <EditText
                            android:background="@drawable/outlineeditext"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:layout_height="40dp"
                            android:textColor="#121111"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/loginb"
                android:background="@drawable/outlinrbutton"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:text="LOGIN NOW"
                android:textSize="15dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_below="@id/linear1"/>



        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sighnupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:textColor="#373334"
            android:text="SignUp Now"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/forgot"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:textColor="#373367"
            android:text="Forgot Password"
            android:fontFamily="sans-serif-medium"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>