<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradientmain"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/relmain"
    tools:context=".Register">


    <RelativeLayout
        android:id="@+id/relimg"
        android:layout_width="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="130dp"
            android:adjustViewBounds="true"
            android:layout_height="130dp"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_baseline_account_circle_24" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relimg">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/createcctv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account "
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>  <TextView
        android:id="@+id/createcctv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account "
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.5"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/fullNameet"
            android:hint="full name"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:maxLines="1"
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <EditText
            android:id="@+id/emailadress"
            android:hint="email adress"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:maxLines="1"
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

   <EditText
           android:id="@+id/mobile"
            android:hint="mobile number"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:maxLines="1"
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <EditText
            android:id="@+id/password"
            android:hint="password"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:maxLines="1"
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
   <EditText
            android:id="@+id/confimpassword"
            android:hint="Re Enter Password"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <Button
            android:id="@+id/adhar"
            android:hint="adhar"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
   <EditText
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <EditText
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
   <EditText

            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <EditText
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
   <EditText
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <EditText
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
   <EditText
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <EditText
            android:background="@drawable/outlineeditext"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>


    </ScrollView>
        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Create new Account"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="45dp"
            android:text="Log in"
            android:background="#00000000"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    </LinearLayout>


</RelativeLayout>

</RelativeLayout>